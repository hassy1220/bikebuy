  <% @posts.each do |post| %>
   <tr>
    <td>
      <%= image_tag post.user.get_profile_image(200,200) %>
    </td>
    <td>
      <%= image_tag post.get_image(100,100) %>
    </td>
    <td>
      <%= post.bike %>
    </td>
    <td>
      <%= post.opinion %>
    </td>
    <td>
      <%= post.price %>
    </td>
  </tr>
  <% end %>
</table>